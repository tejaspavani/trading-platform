def _set_run_seed(seed=None):
    """Use time-based seed if none/-1; ensures different synthetic data each run."""
    if seed in (None, -1):
        seed = int(time.time()) & 0xFFFFFFFF
    random.seed(seed)
    if np is not None:
        np.random.seed(seed)
    print(f"[SEED] Using seed: {seed}")
    return seed
# --- end: time-based seed ---

